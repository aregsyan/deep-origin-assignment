{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "types": ["node", "reflect-metadata"],
      "rootDir": "./",
      "outDir": "./build",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
    },
    "exclude": [
      "node_modules"
    ]
}